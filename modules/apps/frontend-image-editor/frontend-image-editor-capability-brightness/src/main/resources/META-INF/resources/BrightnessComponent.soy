{namespace ImageEditorBrightnessComponent}

/**
 * Image Editor Brightness Component
 *
 * @param? pathThemeImages
 * @param ref
 * @param requestPreview
 */
{template .render}
	<div id="{$ref}">
		<svg class="lexicon-icon min-value">
			<use xlink:href="{$pathThemeImages}/lexicon/icons.svg#sun"></use>
		</svg>

		<div class="centered">
			{call liferay.frontend.Slider.render}
				{param events: [
					'valueChanged': $requestPreview
				] /}
				{param ref: 'slider' /}
				{param value: 50 /}
			{/call}
		</div>

		<svg class="lexicon-icon max-value">
			<use xlink:href="{$pathThemeImages}/lexicon/icons.svg#sun"></use>
		</svg>
	</div>
{/template}