{namespace ImageEditorCropHandles}

/**
 * Crop Handles
 *
 * @param ref
 */
{template .render}
	<div class="hide selection" id="{$ref}" style="border: solid 2px #869CAD; cursor: move; position: absolute;">
		<canvas class="cropped-image-preview"></canvas>

		<div class="resize-handle"></div>
	</div>
{/template}