{namespace com.liferay.layout.content.page.editor.web.TextField}

/**
 * Field Select variation
 */
{template .render}
	{@param configurationValues: ?}
	{@param field: [
		name: string,
		label: string,
		type: string,
		typeOptions: ?
	]}

	{@param? _handleTextValueChanged: any}

	<div class="form-group">
		<label for="{$field.name}">
			{$field.label}
		</label>

		{let $inputAttributes kind="attributes"}
			class="form-control form-control-sm"
			data-onchange="{$_handleTextValueChanged}"
			id="{$field.name}"
			placeholder="{$field.typeOptions?.placeholder ?: ''}"
			type="text"
			value="{$configurationValues[$field.name]}"
		{/let}

		<input {$inputAttributes} />
	</div>
{/template}