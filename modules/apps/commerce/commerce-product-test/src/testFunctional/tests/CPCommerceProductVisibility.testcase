@component-name = "portal-commerce"
definition {

	property portal.release = "true";
	property portal.upstream = "true";
	property release.feature.flags.disable.DISABLE_PRIVATE_LAYOUTS = "true";
	property testray.main.component.name = "Product Info Management";

	setUp {
		CommerceConfiguration.commerceSetUp(storeFront = "true");
	}

	tearDown {
		CommerceConfiguration.commerceTearDown();
	}

	@description = "This is a test for COMMERCE-6088. AddAccountGroupFilter"
	@ignore = "true"
	@priority = 3
	test AddAccountGroupFilter {

		// TODO COMMERCE-6088 AddAccountGroupFilter

	}

	@description = "This is a test for COMMERCE-6086. AddAChannelFilter"
	@priority = 3
	test AddAChannelFilter {
		property portal.acceptance = "false";

		// TODO Review

		CommerceNavigator.gotoPortlet(
			category = "Store Management",
			portlet = "Channels");

		Click(locator1 = "Button#PLUS");

		CommerceEntry.addNewChannelsEntry(
			channelCurrency = "US Dollar",
			channelName = "Test Channel",
			channelType = "Site");

		CommerceNavigator.gotoPortlet(
			category = "Product Management",
			portlet = "Products");

		CPCommerceCatalog.newProductsEntry(
			productCatalog = "Master",
			productName = "Simple T-Shirt",
			productType = "Simple");

		CommerceDiagram.setVisibility(
			checkboxName = "Test Channel",
			name = "Channels");
	}

	@description = "This is a test for COMMERCE-10610. Regular users can assert the empty product channels visibility with the view permissions for products and catalogs of the admin panel"
	@priority = 3
	test CanAssertEmptyProductChannelsVisibilityWithProductsAndCatalogsViewPermissions {
		property custom.properties = "jsonws.web.service.paths.excludes=${line.separator}company.security.strangers.verify=false";
		property portal.acceptance = "false";

		task ("Given a Minium site") {
			CommerceAccelerators.initializeNewSiteViaAccelerator(siteName = "Minium");
		}

		task ("And a regular user is created") {
			JSONUser.addUser(
				userEmailAddress = "testuser@liferay.com",
				userFirstName = "Test",
				userLastName = "User",
				userScreenName = "testuser");

			JSONUser.setFirstPassword(
				agreeToTermsAndAnswerReminderQuery = "true",
				requireReset = "false",
				userEmailAddress = "testuser@liferay.com");
		}

		task ("And the user has permission to view products and catalogs in the both products and catalogs sections of the admin panel") {
			Permissions.definePermissionViaJSONAPI(
				resourceAction = "ACCESS_IN_CONTROL_PANEL",
				resourceName = "com_liferay_commerce_product_definitions_web_internal_portlet_CPDefinitionsPortlet",
				roleTitle = "User");

			Permissions.definePermissionViaJSONAPI(
				resourceAction = "VIEW",
				resourceName = "com_liferay_commerce_product_definitions_web_internal_portlet_CPDefinitionsPortlet",
				roleTitle = "User");

			Permissions.definePermissionViaJSONAPI(
				resourceAction = "VIEW_CONTROL_PANEL",
				resourceName = 90,
				roleTitle = "User");

			Permissions.definePermissionViaJSONAPI(
				resourceAction = "ACCESS_IN_CONTROL_PANEL",
				resourceName = "com_liferay_commerce_catalog_web_internal_portlet_CommerceCatalogsPortlet",
				roleTitle = "User");

			Permissions.definePermissionViaJSONAPI(
				resourceAction = "VIEW",
				resourceName = "com.liferay.commerce.product.model.CommerceCatalog",
				roleTitle = "User");

			Permissions.definePermissionViaJSONAPI(
				resourceAction = "VIEW_COMMERCE_CATALOGS",
				resourceName = "com.liferay.commerce.catalog",
				roleTitle = "User");
		}

		task ("When the user logs in and goes to the Visibility tab of ABS Sensor product in the products admin panel") {
			User.logoutAndLoginPG(
				userLoginEmailAddress = "testuser@liferay.com",
				userLoginFullName = "Test User");

			CommerceProducts.openProductsAdmin();

			CommerceNavigator.gotoEntry(entryName = "ABS Sensor");

			CommerceEntry.gotoMenuTab(menuTab = "Visibility");
		}

		task ("Then no channels are displayed") {
			AssertTextEquals(
				locator1 = "Message#EMPTY_STATE_INFO",
				value1 = "No Results Found");
		}
	}

	@description = "This is a test for COMMERCE-6089. RemoveAccountGroupFilter"
	@priority = 3
	test RemoveAccountGroupFilter {
		property portal.acceptance = "false";
		property portal.upstream = "quarantine";

		// TODO Review

		AccountGroups.openAccountGroupsAdmin();

		Click(locator1 = "Button#PLUS");

		CommerceEntry.addNewAccountGroupsEntry(entryName = "Guest");

		Button.clickSave();

		CommerceNavigator.gotoPortlet(
			category = "Product Management",
			portlet = "Products");

		CPCommerceCatalog.newProductsEntry(
			productCatalog = "Master",
			productName = "Simple T-Shirt",
			productType = "Simple");

		CommerceDiagram.setVisibility(
			checkboxName = "Guest",
			name = "Account Groups",
			webContentTitle = "Add Account Group Relation to Simple T-Shirt");

		Button.click(button = "Delete");

		SelectFrameTop();

		AssertElementPresent(locator1 = "Message#SUCCESS");

		Click(
			key_name = "Account Groups",
			locator1 = "ToggleSwitch#ENABLE_SPECIFIC_TOGGLE_SWITCH");
	}

	@description = "This is a test for COMMERCE-6087. RemoveAChannelFilter"
	@priority = 5
	test RemoveAChannelFilter {
		property portal.acceptance = "true";
		property test.name.skip.portal.instance = "CPCommerceProductVisibility#RemoveAChannelFilter";

		CommerceNavigator.gotoPortlet(
			category = "Product Management",
			portlet = "Products");

		CPCommerceCatalog.newProductsEntry(
			productCatalog = "Master",
			productName = "Simple T-Shirt",
			productType = "Simple");

		CommerceDiagram.setVisibility(
			checkboxName = "Test Channel",
			name = "Channels");

		WaitForElementPresent(
			key_productName = "Test Channel",
			locator1 = "CommerceOrders#ORDER_DETAILS_PRODUCT_NAME");

		Button.click(button = "Delete");

		Alert.viewSuccessMessage();

		Click(
			key_name = "Channels",
			locator1 = "ToggleSwitch#ENABLE_SPECIFIC_TOGGLE_SWITCH");
	}

}