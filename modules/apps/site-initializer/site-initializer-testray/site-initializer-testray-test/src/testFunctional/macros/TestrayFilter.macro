definition {

	macro assertMultiSelect {
		for (var option : list ${listMultiSelect}) {
			AssertElementPresent(
				key_option = ${option},
				locator1 = "TestrayFilter#VIEW_MULTI_SELECT");
		}
	}

	macro assertNoResultsFound {
		AssertTextEquals(
			locator1 = "Message#EMPTY_STATE_INFO",
			value1 = "No Results Found");
	}

	macro clickColumn {
		Click(locator1 = "TestrayFilter#COLUMNS_ICON");
	}

	macro clickFilter {
		Click(locator1 = "TestrayFilter#FILTER_ICON");
	}

	macro clickMultiSelect {
		Click(
			key_label = ${header},
			locator1 = "TestrayFilter#CLICK_MULTI_SELECT");
	}

	macro multiSelect {
		TestrayFilter.clickMultiSelect(header = ${header});

		for (var option : list ${listMultiSelect}) {
			Click(
				key_label = ${label},
				key_option = ${option},
				locator1 = "TestrayFilter#MULTI_SELECT_OPTION");
		}
	}

	macro pinResult {
		Click.javaScriptClick(locator1 = "TestrayFilter#PIN_ICON");

		Alert.viewSuccessMessageText(successMessage = "Filters pinned successfully.");
	}

	macro searchFilter {
		Type(
			locator1 = "TestrayFilter#SEARCH_FILTERS",
			value1 = ${value});
	}

	macro selectColumns {
		for (var column : list ${listColumn}) {
			Click(
				key_column = ${column},
				locator1 = "TestrayFilter#COLUMNS_OPTIONS");
		}

		Button.click(button = "Apply");
	}

	macro typeFilter {
		Type(
			key_fieldLabel = ${label},
			locator1 = "TextInput#GENERIC_TEXT_INPUT",
			value1 = ${value});

		Button.click(button = "Apply");
	}

	macro unpinResult {
		Click.javaScriptClick(locator1 = "TestrayFilter#UNPIN_ICON");

		Alert.viewSuccessMessageText(successMessage = "Filters unpinned successfully.");
	}

}