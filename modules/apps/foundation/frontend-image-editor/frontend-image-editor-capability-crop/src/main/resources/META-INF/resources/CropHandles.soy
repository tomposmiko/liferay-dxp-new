{namespace ImageEditorCropHandles}

/**
 * Crop Handles
 *
 * @param ref
 */
{template .render}
	<div id="{$ref}" class="hide selection" style="border: solid 2px #869CAD; cursor: move; position: absolute;">
		<canvas class="cropped-image-preview"></canvas>
		<div class="resize-handle"></div>
	</div>
{/template}