{namespace DDMPassword}

/**
 * Defines the delegated template for the password field.
 */
{deltemplate ddm.field variant="'password'"}
	{call .render data="all" /}
{/deltemplate}

/**
 * Prints the DDM form password field.
 */
{template .render}
	{@param name: string}
	{@param placeholder: string}
	{@param readOnly: bool}
	{@param required: bool}
	{@param showLabel: bool}
	{@param value: string}
	{@param visible: bool}
	{@param? dir: string}
	{@param? label: string}
	{@param? tip: string}
	{@param? tooltip: string}

	<div class="form-group{$visible ? '' : ' hide'} liferay-ddm-form-field-password {$tip ? 'liferay-ddm-form-field-has-tip' : ''}" data-fieldname="{$name}">
		{if $showLabel}
			<label class="control-label{$readOnly ? ' disabled' : ''}" for="{$name}">
				{$label}

				{if $required}
					<span class="icon-asterisk text-warning"></span>
				{/if}
			</label>

			{if $tip}
				<span class="form-text">{$tip}</span>
			{/if}
		{/if}

		<div class="input-group-container {if $tooltip}input-group-default{/if}">
			<input class="field form-control"
				{if $dir}dir="{$dir}"{/if}
				{if $readOnly}disabled{/if}
				id="{$name}"
				name="{$name}"
				placeholder="{$placeholder}"
				type="password"
				value="{$value}">

			{if $tooltip}
				<span class="input-group-addon">
					<span class="input-group-addon-content">
						<a class="help-icon help-icon-default icon-monospaced icon-question"
							data-original-title="{$tooltip}"
							data-toggle="popover"
							href="javascript:;"
							title="{$tooltip}">
						</a>
					</span>
				</span>
			{/if}
		</div>
	</div>
{/template}