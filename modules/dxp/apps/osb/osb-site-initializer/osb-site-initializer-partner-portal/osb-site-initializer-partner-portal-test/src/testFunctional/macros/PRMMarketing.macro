definition {

	@summary = "Click on button that takes the user do MDF Forms"
	macro gotoAddNewMDF {
		Click(locator1 = "PRMMarketing#APPLY_FOR_FUNDS");
	}

	@summary = "View the activity information on MDF Review Page"
	macro viewMDFActivity {
		Click(
			key_textButton = ${activityName},
			locator1 = "PRMMDFRequest#TEXT_BUTTON");

		AssertElementPresent(
			key_fieldName = "Activity name",
			key_fieldValue = ${activityName},
			locator1 = "PRMMDFRequest#SUMMARY_FIELD");

		AssertElementPresent(
			key_fieldName = "Type of Activity",
			key_fieldValue = ${typeOfActivity},
			locator1 = "PRMMDFRequest#SUMMARY_FIELD");

		AssertElementPresent(
			key_fieldName = "Tactic",
			key_fieldValue = ${tactic},
			locator1 = "PRMMDFRequest#SUMMARY_FIELD");

		AssertElementPresent(
			key_fieldName = "Marketing activity",
			key_fieldValue = ${activityDescription},
			locator1 = "PRMMDFRequest#SUMMARY_FIELD");

		AssertTextEquals.assertPartialText(
			key_fieldName = "Start Date",
			key_fieldValue = ${startDate},
			locator1 = "PRMMDFRequest#SUMMARY_FIELD",
			value1 = ${startDate});

		AssertTextEquals.assertPartialText(
			key_fieldName = "End Date",
			key_fieldValue = ${endDate},
			locator1 = "PRMMDFRequest#SUMMARY_FIELD",
			value1 = ${endDate});

		AssertElementPresent(
			key_fieldName = ${expense},
			key_fieldValue = ${budget},
			locator1 = "PRMMDFRequest#SUMMARY_FIELD");

		AssertElementPresent(
			key_fieldName = "Is a lead list an outcome of this activity?",
			key_fieldValue = ${leadList},
			locator1 = "PRMMDFRequest#SUMMARY_FIELD");
	}

	@summary = "View the goals information on MDF Review Page"
	macro viewMDFGoals {
		AssertElementPresent(
			key_fieldName = "Company Name",
			key_fieldValue = ${accountName},
			locator1 = "PRMMDFRequest#SUMMARY_FIELD");

		AssertElementPresent(
			key_fieldName = "Region",
			key_fieldValue = ${countryName},
			locator1 = "PRMMDFRequest#SUMMARY_FIELD");

		AssertElementPresent(
			key_fieldName = "Provide the name of the campaign",
			key_fieldValue = ${campaignName},
			locator1 = "PRMMDFRequest#SUMMARY_FIELD");

		AssertElementPresent(
			key_fieldName = "Provide a short description of the overall campaign",
			key_fieldValue = ${campaignDescription},
			locator1 = "PRMMDFRequest#SUMMARY_FIELD");

		AssertElementPresent(
			key_fieldName = "Liferay business/sales goals",
			key_fieldValue = ${goalsOptions},
			locator1 = "PRMMDFRequest#SUMMARY_FIELD");

		AssertElementPresent(
			key_fieldName = "Target Market(s)",
			key_fieldValue = ${targetMarketOptions},
			locator1 = "PRMMDFRequest#SUMMARY_FIELD");

		AssertElementPresent(
			key_fieldName = "Target Audience/Role",
			key_fieldValue = ${targetRolesOptions},
			locator1 = "PRMMDFRequest#SUMMARY_FIELD");
	}

}