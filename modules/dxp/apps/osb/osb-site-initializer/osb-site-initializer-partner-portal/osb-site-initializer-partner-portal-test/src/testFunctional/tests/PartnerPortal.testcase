@component-name = "portal-solutions"
definition {

	property custom.properties = "javascript.single.page.application.enabled=false${line.separator}jsonws.web.service.paths.excludes=";
	property osgi.modules.includes = "osb-site-initializer-partner-portal";
	property portal.release = "false";
	property portal.upstream = "true";
	property release.feature.flags.disable.DISABLE_PRIVATE_LAYOUTS = "true";
	property testray.main.component.name = "OSB Site Initializer Partner Portal";

	var testSiteName = "Partner Portal Name";
	var testSiteURL = "partner-portal-name";

	setUp {
		task ("Set up instance and sign in") {
			TestCase.setUpPortalInstance();

			User.firstLoginPG();
		}
	}

	tearDown {
		var testPortalInstance = PropsUtil.get("test.portal.instance");

		if ("${testPortalInstance}" == "true") {
			PortalInstances.tearDownCP();
		}
		else {
			JSONGroup.deleteGroupByName(groupName = "${testSiteName}");
		}
	}

	@description = "This is a test for LPS-158190. It ensures that a PRM Site can be created."
	@priority = "5"
	test SiteCanBeCreated {
		task ("Given a new Partner Portal Site") {
			Site.openSitesAdmin();

			TeamExtranet.addSiteTemplateCP(
				siteName = "${testSiteName}",
				siteTemplateName = "Liferay OSB Site Initializer Partner Portal");
		}

		task ("Then the site can be acessed") {
			ApplicationsMenu.gotoSite(site = "Partner Portal Name");

			AssertElementPresent(
				key_title = "Partner Portal",
				locator1 = "Header#H3_TITLE");
		}
	}

}