definition {

	@summary = "This macro asserts the site language"
	macro assertLanguageChange {
		var key_title = ${siteTitle};

		AssertVisible(locator1 = "CP2HomePage#WELCOME_PAGE");
	}

	@summary = "This macro opens the Cookie Policy link on the home page of the site"
	macro clickAtCookiePoliceLink {
		Click(locator1 = "CP2HomePage#COOKIE_LINK");
	}

	@summary = "This macro selects a language for the site"
	macro clickAtLanguageButton {
		var key_option = ${language};

		Click(locator1 = "CP2HomePage#LANGUAGE_BUTTON");

		Click(locator1 = "CP2HomePage#DROPDOWN_OPTIONS");
	}

}