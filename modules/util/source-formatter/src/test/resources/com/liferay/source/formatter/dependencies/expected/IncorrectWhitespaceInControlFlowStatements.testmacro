	macro TestControlFlowStatementsFormat {

		// if statement

		if ((IsElementPresent(locator1 = "Blogs#ADD_BLOGS_ENTRY")) &&
			("${check}" == "true") &&
			("${check}" == "true")) {

			Alert.viewSuccessMessage();
		}

		// if else statement

		if ("${check}" == "true") {
			Alert.viewSuccessMessage();
		}
		else if ("${check}" == "false") {
			Alert.viewRequiredField();
		}
		else {
			Alert.viewRequestFailedToComplete();
		}

		if ("${check}" == "true") {
			Alert.viewSuccessMessage();
		}
		else if ("${check}" == "false") {
			Alert.viewRequiredField();
		}
		else {
			Alert.viewRequestFailedToComplete();
		}

