			Alert.viewSuccessMessage2();
		}
		else if ("${check}" == "false") {
			Alert.viewRequiredField2();
		}
		else {
			Alert.viewRequestFailedToComplete2();
		}

		// while statement

		while (!("${i}" == "${propertyNumber}")) {
			var i = MathUtil.sum("${i}", "1");
		}

		while (!("${i}" == "${propertyNumber}")) {
			var i = MathUtil.sum("${i}", "1");
		}

		// for statement

		for (var row : table "${rawTable}") {
			TableEcho.echoTwoVars(
				v0 = "${row[0]}",
				v1 = "${row[1]}");
		}

		for (var row : table "${rawTable}") {
			TableEcho.echoTwoVars(
				v0 = "${row[0]}",
				v1 = "${row[1]}");
		}

		// task statement

		task ("Task1") {
			echo("## Task1");
		}

		task ("Task2") {
			echo("## Task2");
		}
	}

