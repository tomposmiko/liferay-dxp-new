@default = "open"
@summary = "Open browser to '${locator1}'"
definition {

	function open {
		WaitForSPARefresh();

		selenium.selectWindow("null");

		selenium.selectFrame("relative=top");

		selenium.open();

		WaitForLiferayEvent.initializeLiferayEventLog();

		selenium.assertJavaScriptErrors();

		selenium.assertLiferayErrors();

		WaitForSPARefresh();
	}

	function openInTheNewTab {
		WaitForSPARefresh();

		selenium.executeJavaScript("sessionStorage.clear(); window.open();");

		SelectWindow.selectPopUp(locator1 = "null");

		selenium.open();
	}

	function openNoError {
		WaitForSPARefresh();

		selenium.selectWindow("null");

		selenium.selectFrame("relative=top");

		selenium.open();
	}

	function openNoErrorNoSPARefresh {
		selenium.selectWindow("null");

		selenium.selectFrame("relative=top");

		selenium.open();
	}

	function openRedirect {
		WaitForSPARefresh();

		var javascript = '''
window.open("${locator1}","_self");
		''';

		selenium.runScript(${javascript});
	}

}