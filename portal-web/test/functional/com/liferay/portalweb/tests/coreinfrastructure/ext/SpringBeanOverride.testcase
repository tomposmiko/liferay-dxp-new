@component-name = "portal-util-misc"
definition {

	property portal.release = "true";
	property portal.upstream = "true";
	property testray.main.component.name = "Ext";

	setUp {
		TestCase.setUpPortalInstance();

		User.firstLoginPG();
	}

	tearDown {
		var testPortalInstance = PropsUtil.get("test.portal.instance");

		if (${testPortalInstance} == "true") {
			PortalInstances.tearDownCP();
		}
	}

	@priority = 4
	test CanOverridePortalImpl {
		property custom.properties = "spring.bean.com.liferay.portal.kernel.uuid.PortalUUID=com.liferay.ext.test.internal.portal.uuid.ExtPortalUUIDImpl${line.separator}spring.bean.com.liferay.portal.util.Portal=com.liferay.ext.test.internal.portal.util.ExtPortalImpl${line.separator}web.server.display.node=true";
		property osgi.modules.includes = "ext-test-impl";

		AssertConsoleTextNotPresent(value1 = "No bean named");

		AssertConsoleTextPresent(value1 = "UUID generated by ExtPortalUUIDImpl");

		Page.assertNodePortPG(nodePort = "ext_portal_impl_installed_");
	}

}