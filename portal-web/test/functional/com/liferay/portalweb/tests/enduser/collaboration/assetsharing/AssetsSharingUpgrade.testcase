@component-name = "portal-upgrades"
definition {

	property database.types = "db2,mariadb,mysql,oracle,postgresql,sqlserver,sybase";
	property portal.release = "true";
	property portal.upstream = "true";
	property test.assert.warning.exceptions = "true";
	property testray.component.names = "Asset Sharing";
	property testray.main.component.name = "Upgrades Lima";

	setUp {
		SignIn.signIn();

		var portalURL = PropsUtil.get("portal.url");

		AssertLocation.assertPartialLocation(value1 = "${portalURL}/web/guest");

		SearchAdministration.executeReindex();
	}

	@description = "Skip the instance for performance improvement."
	@priority = 5
	@refactordone
	test CanViewSharedAssetsArchive72101 {
		property data.archive.type = "data-archive-asset-sharing";
		property portal.version = "7.2.10.1";
		property test.name.skip.portal.instance = "AssetsSharingUpgrade#CanViewSharedAssetsArchive72101";

		ValidateAssetSharingUpgrade.viewSharedDocument(dmDocumentTitle = "DM Document Title 1");

		ValidateAssetSharingUpgrade.viewSharedBlog();

		ValidateAssetSharingUpgrade.revokeAndUpdateSharedEntry(
			blogsEntryTitleUpdate = "Blogs Entry Title Can Update",
			blogsEntryTitleView = "Blogs Entry Title",
			dmDocumentTitleUpdate = "DM Document Title Can Update",
			dmDocumentTitleView = "DM Document Title 1");

		ValidateAssetSharingUpgrade.viewNoShareOptionAfterDisabled();
	}

	@priority = 5
	@refactordone
	test CanViewSharedAssetsArchive73101 {
		property data.archive.type = "data-archive-asset-sharing";
		property portal.version = "7.3.10.1";

		ValidateAssetSharingUpgrade.viewSharedDocument(dmDocumentTitle = "DM Document Title 1");

		ValidateAssetSharingUpgrade.viewSharedBlog();

		ValidateAssetSharingUpgrade.revokeAndUpdateSharedEntry(
			blogsEntryTitleUpdate = "Blogs Entry Title Can Update",
			blogsEntryTitleView = "Blogs Entry Title",
			dmDocumentTitleUpdate = "DM Document Title Can Update",
			dmDocumentTitleView = "DM Document Title 1");

		ValidateAssetSharingUpgrade.viewNoShareOptionAfterDisabled();
	}

}