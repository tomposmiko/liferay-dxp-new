			groupName = "Test Site Name",
			layoutName = "Test Page Name",
			widgetName = "Asset Publisher");

		JSONLayout.addWidgetToPublicLayout(
			groupName = "Test Site Name",
			layoutName = "Test Page Name",
			widgetName = "Documents and Media");

		Navigator.gotoSitePage(
