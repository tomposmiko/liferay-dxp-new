@component-name = "portal-workflow"
definition {
	property portal.release = "true";
	property portal.upstream = "true";
	property testray.main.component.name = "Workflow";
	var pageName = "Asset Publisher Page";
	var portletName = "Asset Publisher";

	setUp {
		TestCase.setUpPortalInstance();

		User.firstLoginPG();

		Navigator.openURL();

		ProductMenu.gotoPortlet(
			category = "Configuration",
			panel = "Site Administration",
			portlet = "Workflow"
		);

		Workflow.configureWorkflow(
			workflowDefinition = "Single Approver",
			workflowResourceValue = "Blogs Entry"
		);

		Workflow.configureWorkflow(
			workflowDefinition = "Single Approver",
			workflowResourceValue = "Message Boards Message"
		);

		Navigator.openURL();

		ProductMenu.gotoPortlet(
			category = "Content",
			panel = "Site Administration",
			portlet = "Web Content"
		);

		Workflow.configureWorkflowViaFolderInfo(workflowDefinition = "Single Approver");

		ProductMenu.gotoPortlet(
			category = "Build",
			panel = "Site Administration",
			portlet = "Pages"
		);

		SitePages.addPublicPage(pageName = "Asset Publisher Page");

		Navigator.gotoPage(pageName = "Asset Publisher Page");

		Portlet.addPG(portletName = "Asset Publisher");
	}

	tearDown {
		var testPortalInstance = PropsUtil.get("test.portal.instance");

		if ("${testPortalInstance}" == "true") {
			PortalInstances.tearDownCP();
		}
		else {
			MessageboardsThread.tearDownCP();

			BlogsEntry.tearDownCP();

			WebContent.tearDownCP();

			Page.tearDownPG();

			Workflow.tearDownPortalWorkflow();

			Workflow.tearDownSiteWorkflow();
		}
	}

	@priority = "4"
	test ApproveBlogsEntryPG {
		Navigator.gotoPage(pageName = "Asset Publisher Page");

		Blogs.addWithWorkflowViaAP(
			entryContent = "Blogs Entry Content",
			entryTitle = "Blogs Entry Title"
		);

		Navigator.openURL();

		ProductMenu.gotoPortlet(
			category = "My Account",
			panel = "User",
			portlet = "My Workflow Tasks"
		);

		Workflow.assignToMeTaskByActions(
			workflowAssetTitle = "Blogs Entry Title",
			workflowAssetType = "Blogs Entry",
			workflowTask = "Review"
		);

		Navigator.gotoPage(pageName = "Asset Publisher Page");

		BlogsEntry.viewWithWorkflowPGViaAP(entryTitle = "Blogs Entry Title");

		Navigator.openURL();

		ProductMenu.gotoPortlet(
			category = "My Account",
			panel = "User",
			portlet = "My Workflow Tasks"
		);

		Workflow.approveTaskByActions(
			workflowAssetTitle = "Blogs Entry Title",
			workflowAssetType = "Blogs Entry",
			workflowTask = "Review"
		);

		Navigator.gotoPage(pageName = "Asset Publisher Page");

		BlogsEntry.viewPGViaAP(
			entryContent = "Blogs Entry Content",
			entryTitle = "Blogs Entry Title"
		);

		Navigator.openURL();

		ProductMenu.gotoPortlet(
			category = "My Account",
			panel = "User",
			portlet = "My Submissions"
		);

		Workflow.gotoViewCompletedAssetViaMySubmissions(
			workflowAssetTitle = "Blogs Entry Title"
		);

		BlogsEntry.viewEntryAsWorkflowAsset(
			entryContent = "Blogs Entry Content",
			entryTitle = "Blogs Entry Title"
		);
	}

	@description = "This is a use case for LPS-72846."
	@priority = "5"
	test ApproveMessageBoardsThreadPG {
		Navigator.openURL();

		ProductMenu.gotoPortlet(
			category = "Content",
			panel = "Site Administration",
			portlet = "Message Boards"
		);

		MessageboardsThread.addWithWorkflowCP(
			threadBody = "MB Thread Message Body",
			threadSubject = "MB Thread Message Subject"
		);

		Notifications.viewBadgeCount(notificationCount = "1");

		Navigator.openURL();

		ProductMenu.gotoPortlet(
			category = "My Account",
			panel = "User",
			portlet = "My Workflow Tasks"
		);

		Workflow.viewNoDuplicateTaskAssignedToMyRoles(
			workflowAssetTitle = "MB Thread Message Subject",
			workflowTask = "Review"
		);

		Workflow.assignToMeTaskByActions(
			workflowAssetTitle = "MB Thread Message Subject",
			workflowAssetType = "Message Boards Message",
			workflowTask = "Review"
		);

		Navigator.gotoPage(pageName = "Asset Publisher Page");

		MessageboardsThread.viewWithWorkflowPGViaAP(
			threadSubject = "MB Thread Message Subject"
		);

		Navigator.openURL();

		ProductMenu.gotoPortlet(
			category = "My Account",
			panel = "User",
			portlet = "My Workflow Tasks"
		);

		Workflow.approveTaskByActions(
			workflowAssetTitle = "MB Thread Message Subject",
			workflowAssetType = "Message Boards Message",
			workflowTask = "Review"
		);

		Navigator.gotoPage(pageName = "Asset Publisher Page");

		MessageboardsThread.viewPGViaAP(
			threadBody = "MB Thread Message Body",
			threadSubject = "MB Thread Message Subject"
		);
	}

	@priority = "4"
	test ApproveWebContentPG {
		Navigator.gotoPage(pageName = "Asset Publisher Page");

		WebContent.addWithWorkflowPGViaAP(
			webContentContent = "WC WebContent Content",
			webContentTitle = "WC WebContent Title"
		);

		Navigator.openURL();

		ProductMenu.gotoPortlet(
			category = "My Account",
			panel = "User",
			portlet = "My Workflow Tasks"
		);

		Workflow.assignToMeTaskByActions(
			workflowAssetTitle = "WC WebContent Title",
			workflowAssetType = "Web Content Article",
			workflowTask = "Review"
		);

		Navigator.gotoPage(pageName = "Asset Publisher Page");

		WebContent.viewWithWorkflowPGViaAP(webContentTitle = "WC WebContent Title");

		Navigator.openURL();

		ProductMenu.gotoPortlet(
			category = "My Account",
			panel = "User",
			portlet = "My Workflow Tasks"
		);

		Workflow.approveTaskByActions(
			workflowAssetTitle = "WC WebContent Title",
			workflowAssetType = "Web Content Article",
			workflowTask = "Review"
		);

		Navigator.gotoPage(pageName = "Asset Publisher Page");

		WebContent.viewPGViaAP(
			webContentContent = "WC WebContent Content",
			webContentTitle = "WC WebContent Title"
		);
	}

	@priority = "4"
	test RejectBlogsEntryPG {
		Navigator.gotoPage(pageName = "Asset Publisher Page");

		Blogs.addWithWorkflowViaAP(
			entryContent = "Blogs Entry Content",
			entryTitle = "Blogs Entry Title"
		);

		Navigator.openURL();

		ProductMenu.gotoPortlet(
			category = "My Account",
			panel = "User",
			portlet = "My Workflow Tasks"
		);

		Workflow.assignToMeTaskByActions(
			workflowAssetTitle = "Blogs Entry Title",
			workflowAssetType = "Blogs Entry",
			workflowTask = "Review"
		);

		Navigator.gotoPage(pageName = "Asset Publisher Page");

		BlogsEntry.viewWithWorkflowPGViaAP(entryTitle = "Blogs Entry Title");

		Navigator.openURL();

		ProductMenu.gotoPortlet(
			category = "My Account",
			panel = "User",
			portlet = "My Workflow Tasks"
		);

		Workflow.rejectTaskByActions(
			workflowAssetTitle = "Blogs Entry Title",
			workflowAssetType = "Blogs Entry",
			workflowTask = "Review"
		);

		Navigator.openURL();

		ProductMenu.gotoPortlet(
			category = "My Account",
			panel = "User",
			portlet = "My Workflow Tasks"
		);

		Workflow.viewRejectedTask(
			workflowAssetTitle = "Blogs Entry Title",
			workflowAssetType = "Blogs Entry"
		);

		Navigator.gotoPage(pageName = "Asset Publisher Page");

		BlogsEntry.viewWithWorkflowPGViaAP(
			entryTitle = "Blogs Entry Title",
			webContentTitle = "Blogs Entry Title"
		);
	}
}