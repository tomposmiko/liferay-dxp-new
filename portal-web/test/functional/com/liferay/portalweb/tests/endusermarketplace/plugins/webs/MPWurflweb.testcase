@component-name = "portal-plugins-deployment"
definition {
	property testray.main.component.name = "Plugin Installer";

	setUp {
		User.firstLoginPG();
	}

	@priority = "4"
	test WurflWebSmoke {
		property web.plugins.includes = "wurfl-web";
		var appName = "Device Recognition Provider";

		ProductMenu.gotoPortlet(
			category = "Apps",
			panel = "Control Panel",
			portlet = "App Manager"
		);

		AppManager.uninstallAppCP(appName = "${appName}");

		ProductMenu.gotoPortlet(
			category = "Apps",
			panel = "Control Panel",
			portlet = "App Manager"
		);

		AppManager.viewUninstallAppCP(appName = "${appName}");
	}
}