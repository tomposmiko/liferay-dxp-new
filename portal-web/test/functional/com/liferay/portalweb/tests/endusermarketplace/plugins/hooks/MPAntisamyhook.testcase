@component-name = "portal-plugins-deployment"
definition {
	property testray.main.component.name = "Plugin Installer";

	setUp {
		User.firstLoginPG();
	}

	@priority = "4"
	test AntiSamyHookSmoke {
		property hook.plugins.includes = "antisamy-hook";
		var appName = "AntiSamy";

		ProductMenu.gotoPortlet(
			category = "Apps",
			panel = "Control Panel",
			portlet = "App Manager"
		);

		AppManager.uninstallAppCP(appName = "${appName}");

		ProductMenu.gotoPortlet(
			category = "Apps",
			panel = "Control Panel",
			portlet = "App Manager"
		);

		AppManager.viewUninstallAppCP(appName = "${appName}");
	}
}