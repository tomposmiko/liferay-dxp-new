@component-name = "portal-plugins-deployment"
definition {
	property testray.main.component.name = "Plugin Installer";

	setUp {
		User.firstLoginPG();
	}

	@priority = "4"
	test ZoeHealthcareThemeSmoke {
		property portlet.plugins.includes = "web-form-portlet";
		property theme.plugins.includes = "zoe-healthcare-theme";
		var appName = "Zoe Healthcare";

		ProductMenu.gotoPortlet(
			category = "Apps",
			panel = "Control Panel",
			portlet = "App Manager"
		);

		AppManager.uninstallAppCP(appName = "${appName}");

		ProductMenu.gotoPortlet(
			category = "Apps",
			panel = "Control Panel",
			portlet = "App Manager"
		);

		AppManager.viewUninstallAppCP(appName = "${appName}");
	}
}