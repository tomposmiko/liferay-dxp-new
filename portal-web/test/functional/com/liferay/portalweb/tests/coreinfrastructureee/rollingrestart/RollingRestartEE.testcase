	@priority = "5"
	test RevertFixPackWithMultipleClusters {
		property app.server.bundles.size = "2";
		property portal.fixpack.release = "true";
		property skip.install-patch = "true";
		property test.name.skip.portal.instance = "RollingRestartEE#RevertFixPackWithMultipleClusters";

		Clustering.viewClusterStatusInConsole();

		Page.assertNodePortPG(nodePort = "8080");

		User.logoutPG(
			nodePort = "8080",
			password = "test",
			userEmailAddress = "test@liferay.com"
		);

		User.loginPG(
			nodePort = "9080",
			password = "test",
			userEmailAddress = "test@liferay.com"
		);

		Page.assertNodePortPG(nodePort = "9080");

		User.logoutPG(
			nodePort = "9080",
			password = "test",
			userEmailAddress = "test@liferay.com"
		);

		User.loginPG(
			nodePort = "10080",
			password = "test",
			userEmailAddress = "test@liferay.com"
		);

		Page.assertNodePortPG(nodePort = "10080");

		User.logoutPG(
			nodePort = "10080",
			password = "test",
			userEmailAddress = "test@liferay.com"
		);

		// Install the latest FP on all 3 servers

		for (var nodePort : list "8080,9080,10080") {
			Portlet.shutdownSpecificServer(nodePort = "${nodePort}");

			var testBuildFixPackZipURL = PropsUtil.get("test.build.fix.pack.zip.url");

			PatchingTool.installPatchOnSpecificServer(
				nodePort = "${nodePort}",
				patchFileZipURL = "${testBuildFixPackZipURL}"
			);

			Portlet.startSpecificServer(
				deleteLiferayHome = "true",
				keepCachedAppServerData = "true",
				nodePort = "${nodePort}"
			);

			User.loginPG(
				nodePort = "${nodePort}",
				password = "test",
				userEmailAddress = "test@liferay.com"
			);

			Page.assertNodePortPG(nodePort = "${nodePort}");

			User.logoutPG(
				nodePort = "${nodePort}",
				password = "test",
				userEmailAddress = "test@liferay.com"
			);
		}

		// Take down cluster2, revert the latest FP and install FP3

		Portlet.shutdownSpecificServer(nodePort = "9080");

		PatchingTool.uninstallPatchOnSpecificServer(nodePort = "9080");

		PatchingTool.installPatchOnSpecificServer(
			nodePort = "9080",
			patchFileZipURL = "https://files.liferay.com/private/ee/fix-packs/7.1.10/dxp/liferay-fix-pack-dxp-3-7110.zip"
		);

		Portlet.startSpecificServer(
			deleteLiferayHome = "true",
			keepCachedAppServerData = "true",
			nodePort = "9080"
		);

		for (var nodePort : list "8080,9080,10080") {
			User.loginPG(
				nodePort = "${nodePort}",
				password = "test",
				userEmailAddress = "test@liferay.com"
			);

			Page.assertNodePortPG(nodePort = "${nodePort}");

			User.logoutPG(
				nodePort = "${nodePort}",
				password = "test",
				userEmailAddress = "test@liferay.com"
			);
		}

		User.loginPG(
			nodePort = "9080",
			password = "test",
			userEmailAddress = "test@liferay.com"
		);

		ProductMenu.gotoPortlet(
			category = "Content",
			panel = "Site Administration",
			portlet = "Web Content"
		);

		WebContentNavigator.gotoAddCP();

		WebContent.addCP(
			webContentContent = "WC WebContent Content Cluster2",
			webContentTitle = "WC WebContent Title Cluster2"
		);

		PortletEntry.publish();

		WebContent.viewTitle(webContentTitle = "WC WebContent Title Cluster2");

		User.logoutPG(
			nodePort = "9080",
			password = "test",
			userEmailAddress = "test@liferay.com"
		);

		for (var nodePort : list "8080,10080") {
			User.loginPG(
				nodePort = "${nodePort}",
				password = "test",
				userEmailAddress = "test@liferay.com"
			);

			ProductMenu.gotoPortlet(
				category = "Content",
				panel = "Site Administration",
				portlet = "Web Content"
			);

			WebContent.viewTitle(webContentTitle = "WC WebContent Title Cluster2");

			User.logoutPG(
				nodePort = "${nodePort}",
				password = "test",
				userEmailAddress = "test@liferay.com"
			);
		}

		// Take down cluster1, revert the latest FP and install FP3

		Portlet.shutdownSpecificServer(nodePort = "8080");

		PatchingTool.uninstallPatchOnSpecificServer(nodePort = "8080");

		PatchingTool.installPatchOnSpecificServer(
			nodePort = "8080",
			patchFileZipURL = "https://files.liferay.com/private/ee/fix-packs/7.1.10/dxp/liferay-fix-pack-dxp-3-7110.zip"
		);

		Portlet.startSpecificServer(
			deleteLiferayHome = "true",
			keepCachedAppServerData = "true",
			nodePort = "8080"
		);

		for (var nodePort : list "8080,9080,10080") {
			User.loginPG(
				nodePort = "${nodePort}",
				password = "test",
				userEmailAddress = "test@liferay.com"
			);

			Page.assertNodePortPG(nodePort = "${nodePort}");

			User.logoutPG(
				nodePort = "${nodePort}",
				password = "test",
				userEmailAddress = "test@liferay.com"
			);
		}

		User.loginPG(
			nodePort = "8080",
			password = "test",
			userEmailAddress = "test@liferay.com"
		);

		ProductMenu.gotoPortlet(
			category = "Build",
			panel = "Site Administration",
			portlet = "Pages"
		);

		SitePages.addPublicPage(
			pageName = "Documents and Media Page",
			sitePageType = "Widget Page"
		);

		SitePages.configurePage(
			columnName = "1 Column",
			pageName = "Documents and Media Page",
			privacy = "Public Pages",
			sitePageType = "Widget Page"
		);

		Navigator.gotoPage(pageName = "Documents and Media Page");

		Portlet.addPG(portletName = "Documents and Media");

		User.logoutPG(
			nodePort = "8080",
			password = "test",
			userEmailAddress = "test@liferay.com"
		);

		for (var nodePort : list "9080,10080") {
			User.loginPG(
				nodePort = "${nodePort}",
				password = "test",
				userEmailAddress = "test@liferay.com"
			);

			Navigator.gotoSpecificURLPage(
				pageName = "Documents and Media Page",
				url = "http://localhost:${nodePort}"
			);

			Portlet.viewPG(portletName = "Documents and Media");

			User.logoutPG(
				nodePort = "${nodePort}",
				password = "test",
				userEmailAddress = "test@liferay.com"
			);
		}

		// Take down cluster3, revert the latest FP and install FP3

		Portlet.shutdownSpecificServer(nodePort = "10080");

		PatchingTool.uninstallPatchOnSpecificServer(nodePort = "10080");

		PatchingTool.installPatchOnSpecificServer(
			nodePort = "10080",
			patchFileZipURL = "https://files.liferay.com/private/ee/fix-packs/7.1.10/dxp/liferay-fix-pack-dxp-3-7110.zip"
		);

		Portlet.startSpecificServer(
			deleteLiferayHome = "true",
			keepCachedAppServerData = "true",
			nodePort = "10080"
		);

		for (var nodePort : list "8080,9080,10080") {
			User.loginPG(
				nodePort = "${nodePort}",
				password = "test",
				userEmailAddress = "test@liferay.com"
			);

			Page.assertNodePortPG(nodePort = "${nodePort}");

			User.logoutPG(
				nodePort = "${nodePort}",
				password = "test",
				userEmailAddress = "test@liferay.com"
			);
		}

		User.loginPG(
			nodePort = "10080",
			password = "test",
			userEmailAddress = "test@liferay.com"
		);

		Navigator.gotoSpecificURLPage(
			pageName = "Documents and Media Page",
			url = "http://localhost:10080"
		);

		DMDocument.addPG(
			dmDocumentDescription = "DM Document Description",
			dmDocumentFile = "Document_1.doc",
			dmDocumentTitle = "DM Document Title Cluster3"
		);

		DMDocument.viewPG(dmDocumentTitle = "DM Document Title Cluster3");

		User.logoutPG(
			nodePort = "10080",
			password = "test",
			userEmailAddress = "test@liferay.com"
		);

		for (var nodePort : list "8080,9080") {
			User.loginPG(
				nodePort = "${nodePort}",
				password = "test",
				userEmailAddress = "test@liferay.com"
			);

			Navigator.gotoSpecificURLPage(
				pageName = "Documents and Media Page",
				url = "http://localhost:${nodePort}"
			);

			DMDocument.viewPG(dmDocumentTitle = "DM Document Title Cluster3");

			User.logoutPG(
				nodePort = "${nodePort}",
				password = "test",
