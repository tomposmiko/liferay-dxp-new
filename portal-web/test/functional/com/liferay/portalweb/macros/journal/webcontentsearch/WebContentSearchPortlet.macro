definition {

	macro search {
		Type(
			locator1 = "TextInput#SEARCH",
			value1 = ${webContentSearchTerm});

		KeyPress(
			locator1 = "TextInput#SEARCH",
			value1 = "\RETURN");
	}

	macro viewNoResults {
		AssertTextEquals(
			locator1 = "Message#EMPTY_INFO",
			value1 = "No results were found that matched the keywords: ${webContentSearchTerm}.");
	}

	macro viewResultsEntry {
		var key_webContentTitle = ${webContentTitle};
		var key_webContentContent = ${webContentContent};

		AssertTextEquals(
			locator1 = "WebContentSearchResults#TITLE",
			value1 = ${webContentTitle});

		AssertTextEquals.assertPartialText(
			locator1 = "WebContentSearchResults#CONTENT",
			value1 = ${webContentContent});
	}

}