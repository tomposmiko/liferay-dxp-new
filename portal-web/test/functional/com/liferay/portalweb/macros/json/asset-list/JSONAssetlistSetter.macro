definition {

	macro setGroupId {
		Variables.assertDefined(parameterList = "${groupName}");

		if (!(isSet(site))) {
			var site = "true";
		}

		var groupId = JSONGroupAPI._getGroupIdByName(
			groupName = "${groupName}",
			site = "${site}");

		return "${groupId}";
	}

	macro setType {
		Variables.assertDefined(parameterList = "${selectionType}");

		if ("${selectionType}" == "manual") {
			var type = "1";
		}

		if ("${selectionType}" == "dynamic") {
			var type = "0";
		}

		return "${type}";
	}

}